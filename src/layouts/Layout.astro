---
import { Icon } from 'astro-icon/components';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Private chef services and culinary experiences" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-white text-gray-800">
    <nav class="bg-white border-b">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
          <!-- Left: Branding -->
          <div class="flex flex-col">
            <span class="text-sm text-pink-800 leading-none">by Maya Greenfeld</span>
            <a href="/" class="text-3xl font-bold text-pink-900 leading-none">mouthful</a>
          </div>
          
          <!-- Right: Navigation + Social Icons -->
          <div class="flex items-center space-x-6">
            <!-- Navigation Links -->
            <div class="hidden md:flex space-x-6">
              <a href="https://mayagreenfeld.substack.com/" target="_blank" class="text-pink-800 hover:text-pink-900 transition-colors">newsletter</a>
              <a href="mailto:mayagreenfeld@gmail.com" class="text-pink-800 hover:text-pink-900 transition-colors">contact</a>
            </div>
            
            <!-- Social Icons -->
            <div class="flex space-x-3">
              <a 
                href="https://www.instagram.com/mouthfulbymaya?igsh=dHBidHFmMm5oZTY2&utm_source=qr"
                target="_blank"
                class="text-pink-800 hover:text-pink-900 transition-colors"
              >
                <Icon name="mdi:instagram" class="w-5 h-5" />
              </a>
              <a 
                href="https://www.tiktok.com/@mouthfulbymaya?_t=ZT-8x9OgVHfT1H&_r=1"
                target="_blank"
                class="text-pink-800 hover:text-pink-900 transition-colors"
              >
                <Icon name="ic:baseline-tiktok" class="w-5 h-5" />
              </a>
              <a 
                href="https://mayagreenfeld.substack.com/"
                target="_blank"
                class="text-pink-800 hover:text-pink-900 transition-colors"
              >
                <Icon name="mdi:email-outline" class="w-5 h-5" />
              </a>
              <a 
                href="http://linkedin.com/in/maya-greenfeld-23926017a/"
                target="_blank"
                class="text-pink-800 hover:text-pink-900 transition-colors"
              >
                <Icon name="mdi:linkedin" class="w-5 h-5" />
              </a>
            </div>
          </div>
        </div>
      </div>
    </nav>
    
    <main>
      <slot />
    </main>
    
    <footer class="bg-gray-50 border-t">
      <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <p class="text-pink-800">&copy; 2025 Maya Greenfeld. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>